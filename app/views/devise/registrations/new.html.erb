<div class="container-fluid">
	<div class="col-md-4 col-md-offset-4">
		<div style="margin-bottom: 3em;">
			<h2 style="margin-bottom: 0px;">加入猎手</h2>
			<p style="font-size: 1.5em">在这里你会找到满意的工作</p>
		</div>
		<b style="padding-bottom: 3em;">创建你的个人资料</b>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= f.error_notification %>

		  	<div class="form-inputs">
			    <%= f.input :email, required: false, autofocus: true, label: " ", placeholder: "Email", input_html: {class: "form-control input-lg"} %>
			    <%= f.input :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "form-control input-lg"}, placeholder: "Password" %>
			    <%= f.input :password_confirmation, input_html: {class: "form-control input-lg"}, placeholder: "Password Confirmation" %>
		  	</div>
		  	<hr>
			<div>
				如果点击下面的“注册账户”表明您同意
				<a href="#">用户协议</a>
			</div>
			<hr>
		  	<div class="form-actions text-center">
		   		<%= f.submit "注册账户", class: "btn btn-success btn-lg" %>
		  	</div>
		<% end %>
		<span class="pull-right">
			已有账户，<%= render "devise/shared/links" %>
		</span>
	</div>
</div>
