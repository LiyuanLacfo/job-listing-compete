<div class="container-fluid" style="padding-left: 0; padding-right: 0; margin-top: 0;">
	<div class="intro-header" style="height: 10px;">
	</div>
	<div class="col-md-8 col-md-offset-2" style="padding-top: 2em; margin-left: 300px;">
		<ul class="nav nav-pills">
			<li class="field-li"><%= link_to(it_admin_jobs_path) do %><i class="fa fa-at" aria-hidden="true" style="color: rgb(100, 255, 100);"></i><b style="color: black;">IT·互联网</b> <% end %>
			</li>
			<li class="field-li"><%= link_to(estate_admin_jobs_path) do %><i class="fa fa-home" aria-hidden="true" style="color: rgb(100, 255, 100);"></i><b style="color: black;">房地产</b> <% end %>
			</li>
			<li class="field-li" style="margin-right: 0px;"><%= link_to(finance_admin_jobs_path) do %><i class="fa fa-usd" aria-hidden="true" style="color: rgb(100, 255, 100);"></i><b style="color: black;">金融</b> <% end %>
			</li>
			<li class="field-li"><%= link_to(consumption_admin_jobs_path) do %><i class="fa fa-shopping-bag" aria-hidden="true" style="color: rgb(100, 255, 100);"></i><b style="color: black;">消费品</b> <% end %>
			</li>
			<li class="field-li"><%= link_to(manufacture_admin_jobs_path) do %><i class="fa fa-car" aria-hidden="true" style="color: rgb(100, 255, 100);"></i><b style="color: black;">汽车·制造</b> <% end %>
			</li>
			<li class="field-li"><%= link_to(chemistry_admin_jobs_path) do %><i class="fa fa-medkit" aria-hidden="true" style="color: rgb(100, 255, 100);"></i><b style="color: black;">化工·医疗</b> <% end %>
			</li>
		</ul>
	</div>
	<div class="col-md-2 pull-right">
		<ul class="nav nav-pills nav-stacked sidebar_1">
			<li><%= link_to("新增职位", new_admin_job_path, class:"btn btn-primary") %></li>
			<li class="dropdown">
				<button href="#" class=" btn btn-primary btn-block" data-toggle="dropdown" id="dropdown_1" aria-haspopup=true aria-expanded=true >
					排序<span class="caret"></span>
				</button>
				<ul class="dropdown-menu" aria-labelledby="#dropdown_1">
					<li><%= link_to("按薪资上限排序", admin_jobs_path(:order => "wage_upper_bound")) %></li>
					<li><%= link_to("按薪资下限排序", admin_jobs_path(:order => "wage_lower_bound")) %></li>
					<li><%= link_to("按创建时间排序", admin_jobs_path) %></li>
				</ul>
			</li>	
		</ul>
	</div>
	<div class="col-md-8 col-md-offset-2">
		<table class="table">
			<thead>
				<th class="center-text">职位名称</th>
				<th class="center-text">创建时间</th>
				<th class="center-text">简历数量</th>
				<th class="center-text">薪资上限</th>
				<th class="center-text">薪资下限</th>
				<th class="center-text">坐标</th>
				<th colspan="3" c class="center-text">操作内容</th>
			</thead>
			<tbody>
				<%= render :partial => "jobs_table", :collection => @jobs, :as => :job %>
			</tbody>
		</table>
	</div>
</div>